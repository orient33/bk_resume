<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <!--
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
    -->

    <TextView
        android:id="@+id/view1"
        android:layout_width="135dip"
        android:layout_height="130dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="#cccc00"
        android:text="@string/hello_world"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/view2"
        android:layout_width="135dip"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
    	android:textSize="20sp"
        android:background="#cc00cc"
        android:text="@string/hello_world2" />

    <TextView
        android:id="@+id/view3"
        android:layout_width="135dip"
        android:layout_height="130dp"
        android:layout_alignLeft="@+id/view1"
        android:layout_centerVertical="true"
        android:background="#bbbb00"
        android:text="@string/hello_world3"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/view4"
        android:layout_width="135dip"
        android:layout_height="130dp"
        android:layout_alignLeft="@+id/view2"
        android:layout_centerVertical="true"
        android:background="#bb00bb"
        android:text="@string/hello_world4"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/view5"
        android:layout_width="135dip"
        android:layout_height="130dp"
        android:layout_marginBottom="30dip"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/view1"
        android:background="#eeee00"
        android:text="@string/hello_world5"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/view6"
        android:layout_width="135dip"
        android:layout_height="130dp"
        android:layout_alignLeft="@+id/view2"
        android:layout_marginBottom="30dip"
        android:layout_alignParentBottom="true"
    	android:textSize="20sp"
        android:background="#ee00ee"
        android:text="@string/hello_world6" />
    
</RelativeLayout>